{
  "rewrites": [
    {
      "source": "/seller/(.*)",   // <--- IMPORTANT: Route /seller and its sub-paths to your API
      "destination": "/api"       // <--- Assumes your Express app is at the /api serverless function
    },
    {
      "source": "/(.*)",           // All other requests go to index.html for your SPA
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/seller/(.*)",   // Apply CORS headers ONLY to your /seller API routes
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "X-Requested-With, Content-Type, Accept, Authorization" },
        { "key": "Access-Control-Allow-Credentials", "value": "true" }
      ]
    }
  ]
}
